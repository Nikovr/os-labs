#!/bin/bash

if [ $1 == "-h" ]
then
echo "With this script you can enter a text menu, where you can open Nano, Vim or Links. Type in ./menu to open it."
exit
fi

while true
do
clear
echo "==================================TEXT MENU===================================="
echo "================<3==============================================<3============="
echo "==============================================================================="
echo "=====================================<3========================================"
echo ""
echo "---------------------------------- 1 - Nano -----------------------------------"
echo ""
echo "---------------------------------- 2 - Vim  -----------------------------------"
echo ""
echo "---------------------------------- 3 - Links-----------------------------------"
echo ""
echo "---------------------------------- 4 - Exit -----------------------------------"
echo ""
echo "==============================================================================="
echo "=====================================<3========================================"
echo "================<3==============================================<3============="
echo "==============================================================================="
echo ""
echo ""
echo ""
echo ""
echo ""
echo ""
echo ""

read VAR
case $VAR in
	
	1)
	nano
	;;

	2)
	vim
	;;

	3)
	links
	;;

	4)
	clear
	exit
	;;

	*)
	continue
	;;
esac

done
